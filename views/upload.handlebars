{{#if errors}}
	{{errors}}
{{/if}}

<div class="container">
	<div class="row">
		<div class="col-md-5 col-md-offset-1 form-wrapper">
			<form action="/upload" method="post" enctype="multipart/form-data" >
				<div style="margin-bottom: 10px;">
					<span class="btn btn-default btn-file">
						Choose Image <input id="files" type="file" name="uploader" />
					</span>
				</div>
				<img id="preview-img" class="img-full" />
				<div class="login-label" style="padding-top:10px;">
					<span> Tags </span>
				</div>
				<div class="login-input">
					<input type="text" class="form-control" name="tags"/>
				</div>
				<div class="clearfix"></div>
				<div class="submitBox">
						<input class="btn btn-primary" type="submit" name="login" value="Upload!" />
				</div>
		 </form>
		</div>
	</div>
</div>

<script type="text/javascript">
	document.getElementById("files").onchange = function () {
			var reader = new FileReader();

			reader.onload = function (e) {
					// get loaded data and render thumbnail.
					document.getElementById("preview-img").src = e.target.result;
			};

			// read the image file as a data URL.
			reader.readAsDataURL(this.files[0]);
	};
</script>
